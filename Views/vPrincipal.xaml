<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aburbanotll1A.Views.vPrincipal"
             Title="vPrincipal">
    <ScrollView>
        <VerticalStackLayout    
    Padding="20"
    Spacing="20">

        <Label 
        Text="TALLER SEMANA 1"
        FontSize="20"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <Label
        Text="Formulario de inscripcion"
        FontSize="20"
        TextColor="Red"/>

        <Image Source="https://redi.cedia.edu.ec/members/UISRAEL.png"
           WidthRequest="200"/>

        <Entry x:Name="txtIdentificacion"
           Placeholder="Identificacion: Cedula/RUC/Pasaporte"/>

        <Entry x:Name="txtApellido"
        Placeholder="Apellidos: Paterno/Materno"/>

        <Entry x:Name="txtNombre"
        Placeholder="Nombres completos:"/>

        <Entry x:Name="txtTelefono"
        Placeholder="Telefono personal:"
           Keyboard="Telephone"/>

        <Entry x:Name="txtCorreo"
        Placeholder="Correo personal:"
           Keyboard="Email"/>

        <Entry x:Name="txtCorreoConfirmacion"
         Placeholder="Confirmar correo"
           Keyboard="Email"/>

        <Button x:Name="btnGuardar"
        Text="Guardar Datos"
        BackgroundColor="BlueViolet"
            Clicked="btnGuardar_Clicked"/>

        <Label x:Name="lblResultado"
           TextColor="Red"/>



    </VerticalStackLayout>
    </ScrollView>
</ContentPage>